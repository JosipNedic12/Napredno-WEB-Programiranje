<%- include('../partials/topbar') %>

<h1>Edit project</h1>

<form method="post" action="/projects/<%= project._id %>">
  <div>Naziv: <input name="naziv" value="<%= project.naziv %>" required /></div>
  <div>Opis: <textarea name="opis"><%= project.opis %></textarea></div>
  <div>Cijena: <input name="cijena" type="number" step="0.01" value="<%= project.cijena %>" /></div>
  <div>Obavljeni poslovi: <textarea name="obavljeniPoslovi"><%= project.obavljeniPoslovi %></textarea></div>
  <div>Datum početka: <input name="datumPocetka" type="date" value="<%= project.datumPocetka ? project.datumPocetka.toISOString().slice(0,10) : '' %>" /></div>
  <div>Datum završetka: <input name="datumZavrsetka" type="date" value="<%= project.datumZavrsetka ? project.datumZavrsetka.toISOString().slice(0,10) : '' %>" /></div>

  <div>
    Archived:
    <input name="archived" type="checkbox" <%= project.archived ? 'checked' : '' %> />
  </div>

  <button type="submit">Save</button>
</form>

<a href="/projects/<%= project._id %>">Cancel</a>

<%- include('../partials/topbar') %>

<h1>New project</h1>

<form method="post" action="/projects">
  <div>Naziv: <input name="naziv" required /></div>
  <div>Opis: <textarea name="opis"></textarea></div>
  <div>Cijena: <input name="cijena" type="number" step="0.01" /></div>
  <div>Obavljeni poslovi: <textarea name="obavljeniPoslovi"></textarea></div>
  <div>Datum početka: <input name="datumPocetka" type="date" /></div>
  <div>Datum završetka: <input name="datumZavrsetka" type="date" /></div>
  <button type="submit">Create</button>
</form>

<a href="/projects">Back</a>
